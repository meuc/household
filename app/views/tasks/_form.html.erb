<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @task do |f| %>
  <div>
    <%= f.label :text %>
    <%= f.text_field :text, placeholder: "Give kiss to the other one" %>
  </div>

  <div>
    <%= f.label :size %>
    <%= f.collection_select :size_id, Size.all, :id, :name, prompt: "Pick size" %>
  </div>

  <div>
    <%= f.label :interval %>
    <%= f.collection_select:interval_id, Interval.all, :id, :name, prompt: "Pick interval" %>
  </div>

  <div>
    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :username, prompt: "Pick user" %>
  </div>

  <%= f.submit %>
<% end %>
